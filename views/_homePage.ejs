<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/home2.css">




<div class="container-fluid" style="height: 100vh;">

    <div class="navbar-index">
        <div class="login">
            <button type="button" class="btn-login" data-toggle="modal" data-target="#ProfileModal">
                Profile
            </button>
        </div>
       <%if(!locals.user){%>
        <div class="login">
            <button type="button" class="btn-login" data-toggle="modal" data-target="#LoginModal">
                Login
            </button>
        </div>
          <%}else{%>
            <div class="login">
              <form action="/signOut" method="GET">
                <button type="submit" class="btn-signup">
                  Sign Out
               </button>
              </form>
          </div>
            <%}%>
            <%if(!locals.user){%>
        <div class="sign-up">
            <button type="button" class="btn-signup" data-toggle="modal" data-target="#SignupModal">
                Sign-Up
            </button>
        </div>
        <%}%>
    </div>

    <div class="content">
        <div class="herotxt">
            <div class="maintxt">
                <h1>R-Stroke</h1>
            </div>
            <div class="subtxt">
                <h3>Resume Creation Solved</h3>
            </div>

        </div>
        <div class="image">
          <img src="/css/image1.png" alt="resume-illustration">
        </div>
    </div>

    <span class="scrolldown">
      
       <a href="#section1"> <i class="fas fa-chevron-down"></i></a>
      
    </span>

</div>


<section id="section1">
      <div class="container-fluid">
        <div class="row">
          <div class="col col-lg-4 col-md-6 col-sm-12 col-12">Box 1</div>
          <div class="col col-lg-4 col-md-6 col-sm-12 col-12">Box 2</div>
          <div class="col col-lg-4 col-md-12 col-sm-12 col-12">Box 3</div>
        </div>
      </div>
  </section>

<footer class="footer1">
  <!-- <h1>A bigger Dummy XD</h1> -->
</footer>

<div class="modal fade" id="ProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%if(!locals.user){%>Login<%}else{%>Your Profile<%}%></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span id="cross-btn" aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
          <%if(!locals.user){%>
          <form action="">
            <div class="login-contents">
              <div class="username-login">
                <input type="text" placeholder="Enter UserName"required>
              </div>

              <div class="password-login">
                <input type="password" placeholder="Enter Password" minlength="8" required>
              </div>

              <div class="signup-redirect">
                Seems unfamiliar? <a href=" " style="font-weight: 700; color: #212121;">Sign-Up</a> Now!!
              </div>
            </div>
          </form>
          <%}else{%>
            <div class="username-login">
              <input type="text" placeholder="Name: <%=locals.user.name%>"  disabled>
              <input type="text" placeholder="Email: <%=locals.user.email%>"disabled>
             
          </div>
          <%}%>
        </div>
        <!-- <div class="modal-footer"> -->
            
            <!-- <button type="button" class="btn btn-primary">Login</button> -->
        <!-- </div> -->
      </div>
    </div>
</div>

<div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
     
      <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Login</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span id="cross-btn" aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
          <form action="/signIn" method="POST">
            <div class="login-contents">
              <div class="username-login">
                <input type="text" name="email" placeholder="Enter UserName"required>
              </div>

              <div class="password-login">
                <input type="password" name="password"placeholder="Enter Password" minlength="8" required>
              </div>
            </div>
            <div class="modal-footer">
              <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
              <button type="submit" class="btn btn-primary">Login</button>
          </div>
          </form>
        </div>
        
      </div>
      
    </div>
  </div>

  <div class="modal fade" id="SignupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Sign-Up</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span id="cross-btn" aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/signUp" method="POST">
            <div class="login-contents">
              <div class="username-login">
                <input type="text" placeholder="Enter UserName"required name="name">
              </div>

              <div class="user-mail">
                <input type="email" placeholder="Enter Email-ID" name='email' required>
              </div>

              <div class="password-login">
                <input type="password" placeholder="Enter Password" minlength="8" name="password" required>
              </div>

              <div class="password-login">
                <input type="password" placeholder="Confirm Password" name="confirm_password" minlength="8" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" style="width: fit-content;">Sign-Up</button>
            </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>